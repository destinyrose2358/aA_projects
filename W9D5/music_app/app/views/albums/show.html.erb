<%= content_for :header do %>
  <h1><%= @album.title %></h1>
<% end %>

<% band_name = @album.band.name %>

<p>Band: <a href="<%= band_url(@album.band_id) %>"><%= band_name %></a></p>
<p>Year: <%= @album.year %></p>
<p>Recording Type: <%= @album.recording_type %></p>
<a href="<%= edit_album_url(@album.id) %>">Edit <%= @album.title %></a>
<form action="<%= album_url(@album.id) %>" method="POST">
  <%= auth_token %>
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete <%= @album.title %>">
</form>

<section class="tracks-list">
  <h2>Tracks</h2>
  <% @album.tracks.each do |track| %>
    <a href="<%= track_url(track.id) %>"><%= track.title %></a>
  <% end %>
</section>
  

<a href="<%= new_album_track_url(@album.id) %>">Add Track</a>